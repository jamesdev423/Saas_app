<div class="row">
	<div class="well">
		<h1><%= @conversation.subject %></h1>

		<% @conversation.receipts_for(current_user).each do |receipt| %>
			<div>
				<div><%= receipt.message.sender.name %> commented:</div>
				<p><%= receipt.message.body %></p>
			</div>
		<% end %>

		<%= form_tag conversation_messages_path(@conversation), method: :post do %>
			<div>
				<%= text_area_tag :body, nil, placeholder: "Type Comment" %>
			</div>
			<%= submit_tag 'Add Comment', class: "btn btn-primary" %>
			<%= link_to "Delete Conversation", conversations_path, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
		<% end %>
	</div>
</div>

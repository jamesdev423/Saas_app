<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h1 class="text-center">Entrepreneurial Mentor Community</h1>
      <p class="text-center">Welcome to the Entrepreneurial Mentor community. Users must fill out a profile in order to be visible in the community.</p></br>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
          <li>
            <div class="well row <%= cycle('white-bg', '') %>">
              <div class="col-sm-3 text-center">
                <% if user.profile.avatar %>
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                  <% end %>
                <% end %>
              </div>
              
              <div>
                <%= link_to user do %>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %>
                <b>
                  <%= user.profile.job_title %> 
                  <% if user.plan_id == 2 %>
                    <span class="label label-danger">PRO</span>
                  <% end %>
                </b>
                <p class="text-center"><%= user.profile.description %></p>
              </div>
            </div>
          </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
